var reg=/(.)(\d+)/g;
var scores='Tom $88, Nicholas ￥100, jack ￡38.';
var result;
while(result=reg.exec(scores)){
	console.log(result);
	console.log(reg.lastIndex);//下一次匹配起始位置
	reg.lastIndex +=10;
}
